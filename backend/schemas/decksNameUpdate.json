{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "Update deck",
    "description": "Updating a deck name",
    "properties": {
        "deckId": {
            "description": "New name of deck",
            "type": "integer",
            "minimum": 0
        },
        "deckName": {
            "description": "Name of new deck",
            "type": "string",
            "minLength": 3,
            "maxLength": 20
        },
        "deckImage": {
            "description": "Image of new deck",
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "deckName",
        "deckImage"
    ]
}